{
  "outputDir": "src/generated/abi",
  "mainSource": "contracts",
  "reposDir": ".repos",
  "onMissingRepo": "error",
  "sources": [
    {
      "id": "contracts",
      "repo": "berachain/contracts",
      "ref": "main",
      "buildCommand": "npm install && forge build",
      "srcDir": "src",
      "outDir": "out",
      "excludePatterns": ["I*.sol", "*_V*.sol"]
    },
    {
      "id": "staking-pools",
      "repo": "berachain/contracts-staking-pools",
      "ref": "main",
      "buildCommand": "forge install && forge build",
      "srcDir": "src",
      "outDir": "out",
      "excludePatterns": ["I*.sol", "*_V*.sol"]
    },
    {
      "id": "bex",
      "repo": "berachain/balancer-v2-monorepo",
      "ref": "master",
      "buildCommand": "yarn && yarn workspace @balancer-labs/balancer-js build && yarn build ",
      "srcDir": [
        "pkg/vault/contracts",
        "pkg/pool-weighted/contracts",
        "pkg/pool-stable/contracts",
        "pkg/pool-utils/contracts"
      ],
      "outDir": [
        "pkg/vault/artifacts/contracts",
        "pkg/pool-weighted/artifacts/contracts",
        "pkg/pool-stable/artifacts/contracts",
        "pkg/pool-utils/artifacts/contracts"
      ],
      "excludePatterns": ["I*.sol", "*_V*.sol"]
    }
  ]
}
